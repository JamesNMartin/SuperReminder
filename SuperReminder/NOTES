SUPER DARK COLOR(TEXT): [UIColor colorWithRed:0.23 green:0.24 blue:0.25 alpha:1.00]

DARK GRAY COLOR: [UIColor colorWithRed:0.49 green:0.51 blue:0.52 alpha:1.00]

LIGHT GRAY COLOR: [UIColor colorWithRed:0.74 green:0.75 blue:0.74 alpha:1.00]

BLUE COLOR: [UIColor colorWithRed:0.02 green:0.11 blue:0.45 alpha:1.00]

GREEN COLOR: [UIColor colorWithRed:0.01 green:0.45 blue:0.20 alpha:1.00]

YELLOW COLOR: [UIColor colorWithRed:0.95 green:0.73 blue:0.15 alpha:1.00]

RED COLOR: [UIColor colorWithRed:0.80 green:0.13 blue:0.07 alpha:1.00]

//LOCAL NOTIF CODE ON BUTTON PRESS
UNMutableNotificationContent *notify = [[UNMutableNotificationContent alloc] init];
notify.title = [NSString localizedUserNotificationStringForKey:@"New:" arguments:nil];
notify.body = [NSString localizedUserNotificationStringForKey:@"New Notification"
arguments:nil];

notify.sound = [UNNotificationSound defaultSound];


UNTimeIntervalNotificationTrigger *trigger = [UNTimeIntervalNotificationTrigger
triggerWithTimeInterval:1
repeats:NO];


UNNotificationRequest *request = [UNNotificationRequest requestWithIdentifier:@"NOTIFICATION"
content:notify
trigger:trigger];


UNUserNotificationCenter *center = [UNUserNotificationCenter currentNotificationCenter];


[center addNotificationRequest:request withCompletionHandler:^(NSError * _Nullable error) {
if (!error) {
NSLog(@"success");
}
}];
